<div class="show-article-container">
  <h2><%= @article.title %></h2>
  <h5><%= @article.content %></h5>

  <div class="show-article-buttons">
    <%= link_to "Update this article", edit_article_path %>
    <%= link_to "Delete this article", article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>
</div>
